! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  base00,  base00,  base00

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  base00,  base05,  base00,  base05,  base00
rofi.color-active:  base00,  base0E,  base00,  base0E,  base00
rofi.color-urgent:  base00,  base08,  base00,  base08,  base00

! Set the desired separator style
rofi.separator-style: solid

! Font
rofi.font: Iosevka 12

#!/usr/bin/env node
const { Option, Command, selectOptionAndRun } = require("./js/rofi");

const options = [
  new Option("Shut Down", new Command("sudo", ["shutdown", "now"])),
  new Option("Restart", new Command("sudo", ["reboot", "now"])),
  new Option("Hibernate", new Command("hibernate")),
  new Option("Log Out", new Command("bspc", ["quit"])),
  new Option("Sleep", new Command("xsleep"))
];

selectOptionAndRun(options);
